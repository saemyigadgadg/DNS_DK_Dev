public with sharing class DN_RFQ_HiddenController {
    @AuraEnabled
    public static String hiddenInit(String recordId) {
        List<Opportunity> optyStage = [SELECT Id, StageName FROM Opportunity WHERE Id =: recordId];
        List<PS__c> psCount = [SELECT Id FROM PS__c WHERE Opportunity__c =: recordId];
        if(optyStage[0].StageName == 'Identified' || optyStage[0].StageName == 'Validated'){
            return 'Hidden';
        }else if(psCount.size() > 0 || optyStage[0].StageName == 'Conditional Agreement' || optyStage[0].StageName == 'Closed Won' || optyStage[0].StageName == 'Closed Drop' || optyStage[0].StageName == 'Closed Lost'){
            //Qulified단계 이후는 new버튼만 안보이게
            return 'NewHidden';
        }else{
            //stage => Qualified
            return 'SUCCESS';
        }
    }
