<aura:component implements="flexipage:availableForAllPageTypes,force:appHostable" access="global"
    controller="DN_AccountLayoutController" description="New Account Prospect Customer">


    <!-- Aura Attribute -->
    <aura:attribute name="objectName" type="String" default="Account" />

    <!-- Prospect Layout -->
    <lightning:recordEditForm aura:id="recordEditForm" objectApiName="{! v.objectName }">

        <!-- Section 01 :: Account Information -->
        <ul class="slds-accordion">
            <li class="slds-accordion__list-item section-container">
                <section class="slds-accordion__section slds-is-open">
                    <!-- Header -->
                    <div class="slds-accordion__summary">
                        <h2 class="slds-accordion__summary-heading">
                            <p class="slds-button slds-button_reset slds-accordion__summary-action">Account Information</p>
                            <!-- <button class="slds-button slds-button_reset slds-accordion__summary-action">Account Information</button> -->
                        </h2>
                    </div>
                    <!-- Body -->
                    <div class="slds-accordion__content">
                        <!-- Left -->
                        <div class="slds-form__col">
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="Name" required="true" />
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="Representative__c" required="true" />
                            </div>
                            <div class="slds-form__item vertical-label-container">
                                <lightning:inputField aura:id="recordField" fieldName="Competitor__c" required="true" />
                            </div>
                            <div class="slds-form__item vertical-label-container">
                                <lightning:inputField aura:id="recordField" fieldName="AccountSource__c" />
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="AccountType__c" />
                            </div>
                        </div>

                        <!-- Right -->
                        <div class="slds-form__col">
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="AccountNameEnglish__c" />
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="BusinessNumber__c" />
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="CountryLookup__c" required="true" />
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="RegionLookup__c" required="true" />
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="FM_CountryCallingCode__c" />
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="Phone" />
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="Mobile__c" />
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="CurrencyIsoCode" value="KRW" required="true" />
                            </div>
                        </div>
                    </div>
                </section>
            </li>
        </ul>

        <!-- Section 02 :: Industry Classification -->
        <ul class="slds-accordion">
            <li class="slds-accordion__list-item section-container">
                <section class="slds-accordion__section slds-is-open">
                    <!-- Header -->
                    <div class="slds-accordion__summary">
                        <h2 class="slds-accordion__summary-heading">
                            <p class="slds-button slds-button_reset slds-accordion__summary-action">Industry Classification</p>
                            <!-- <button class="slds-button slds-button_reset slds-accordion__summary-action">Account Information</button> -->
                        </h2>
                    </div>
                    <!-- Body -->
                    <div class="slds-accordion__content">
                        <!-- Left -->
                        <div class="slds-form__col">
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="MainCategory__c" required="true" />
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="SubCategory__c" required="true" />
                            </div>
                        </div>

                        <!-- Right -->
                        <div class="slds-form__col">
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="IsTooling__c" required="true" />
                            </div>
                        </div>
                    </div>
                </section>
            </li>
        </ul>

        <!-- Section 03 :: Additional Information -->
        <ul class="slds-accordion">
            <li class="slds-accordion__list-item section-container">
                <section class="slds-accordion__section slds-is-open">
                    <!-- Header -->
                    <div class="slds-accordion__summary">
                        <h2 class="slds-accordion__summary-heading">
                            <p class="slds-button slds-button_reset slds-accordion__summary-action">Additional Information</p>
                            <!-- <button class="slds-button slds-button_reset slds-accordion__summary-action">Account Information</button> -->
                        </h2>
                    </div>
                    <!-- Body -->
                    <div class="slds-accordion__content">
                        <!-- Left -->
                        <div class="slds-form__col">
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="Production__c" />
                            </div>
                            <div class="slds-form__item vertical-label-container">
                                <lightning:inputAddress
                                    aura:id             ="shippingAddress"
                                    addressLabel        ="Shipping Address"
                                    streetLabel         ="Shipping Street"
                                    cityLabel           ="Shipping City"
                                    countryLabel        ="Shipping Country"
                                    provinceLabel       ="Shipping State/Province"
                                    postalCodeLabel     ="Shipping Zip/Postal Code"
                                    showAddressLookup   ="true"
                                    addressLookupPlaceholder ="Search Address">
                                </lightning:inputAddress>
                            </div>
                        </div>

                        <!-- Right -->
                        <div class="slds-form__col">
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="Website__c" />
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="MergedAccount__c"/>
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="SearchTerm__c" />
                            </div>
                        </div>
                    </div>
                </section>
            </li>
        </ul>

        <!-- Section 04 :: Virtual Key Account -->
        <ul class="slds-accordion">
            <li class="slds-accordion__list-item section-container">
                <section class="slds-accordion__section slds-is-open">
                    <!-- Header -->
                    <div class="slds-accordion__summary">
                        <h2 class="slds-accordion__summary-heading">
                            <p class="slds-button slds-button_reset slds-accordion__summary-action">Virtual Key Account</p>
                            <!-- <button class="slds-button slds-button_reset slds-accordion__summary-action">Account Information</button> -->
                        </h2>
                    </div>
                    <!-- Body -->
                    <div class="slds-accordion__content">
                        <!-- Left -->
                        <div class="slds-form__col">
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="IsVirtualParent__c" />
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="VirtualParentSegmentation__c"/>
                            </div>
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="KASegmentation__c" />
                            </div>
                        </div>

                        <!-- Right -->
                        <div class="slds-form__col">
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="ParentId" />
                            </div>
                            <div class="slds-form__item vertical-label-container">
                                <lightning:inputField aura:id="recordField" fieldName="DNSCOLtd__c" />
                            </div>
                        </div>
                    </div>
                </section>
            </li>
        </ul>

        <!-- Section 05 :: Key Account Information -->
        <ul class="slds-accordion">
            <li class="slds-accordion__list-item section-container">
                <section class="slds-accordion__section slds-is-open">
                    <!-- Header -->
                    <div class="slds-accordion__summary">
                        <h2 class="slds-accordion__summary-heading">
                            <p class="slds-button slds-button_reset slds-accordion__summary-action">Key Account Information</p>
                            <!-- <button class="slds-button slds-button_reset slds-accordion__summary-action">Account Information</button> -->
                        </h2>
                    </div>
                    <!-- Body -->
                    <div class="slds-accordion__content">
                        <!-- Left -->
                        <div class="slds-form__col">
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="IsKeyAccount__c" />
                            </div>
                        </div>

                        <!-- Right -->
                        <div class="slds-form__col">
                        </div>
                    </div>
                </section>
            </li>
        </ul>

        <!-- Section 06 :: DNS Key Account Information -->
        <ul class="slds-accordion">
            <li class="slds-accordion__list-item section-container">
                <section class="slds-accordion__section slds-is-open">
                    <!-- Header -->
                    <div class="slds-accordion__summary">
                        <h2 class="slds-accordion__summary-heading">
                            <p class="slds-button slds-button_reset slds-accordion__summary-action">DNS Key Account Information</p>
                            <!-- <button class="slds-button slds-button_reset slds-accordion__summary-action">Account Information</button> -->
                        </h2>
                    </div>
                    <!-- Body -->
                    <div class="slds-accordion__content">
                        <!-- Left -->
                        <div class="slds-form__col">
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="IsGlobalKeyAccount__c" />
                            </div>
                        </div>

                        <!-- Right -->
                        <div class="slds-form__col">
                            <div class="slds-form__item">
                                <lightning:inputField aura:id="recordField" fieldName="KAIndustryType__c" />
                            </div>
                        </div>
                    </div>
                </section>
            </li>
        </ul>

    </lightning:recordEditForm>

</aura:component>