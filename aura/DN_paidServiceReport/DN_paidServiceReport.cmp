                                                            alternativeText="Close Product Number"
                                                            onclick="{!c.clearProductNumber}" class="clear-btn"
                                                            accesskey="{!index}" />
                                                        <lightning:buttonicon iconName="utility:search" size="medium"
                                                            alternativeText="Search"
                                                            onclick="{!c.openproductNumberModal}"
                                                            accesskey="{!index}" />
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="input-wrap">
                                                        <lightning:input type="text" value="{!usage.productName}"
