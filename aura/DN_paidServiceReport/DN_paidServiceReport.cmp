                                                    <div class="input-wrap">
                                                        <lightning:input type="checkbox"
                                                            checked="{!usage.usageListChange}" variant="label-hidden"
                                                            data-index="{!index}" />
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="input-wrap">
