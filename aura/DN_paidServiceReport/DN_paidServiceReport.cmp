                                <table>
                                    <colgroup>
                                        <col width="1%" />
                                        <col width="15%" />
                                        <col width="15%" />
                                        <col width="1%" />
                                        <col width="8%" />
                                        <col width="60%" />
                                    </colgroup>
                                    <thead>
                                        <tr>
                                            <th>
                                                <div class="input-wrap">
                                                    <lightning:input type="checkbox" onchange="{!c.toggleAllUsageList}"
