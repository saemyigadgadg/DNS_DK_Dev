<aura:component
    implements="forceCommunity:availableForAllPageTypes,force:lightningquickactionwithoutheader,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:hasSObjectName,force:lightningQuickAction,lightning:isUrlAddressable,lightning:actionOverride,lightning:hasPageReference,lightning:availableForFlowScreens"
    description="재조정 매출채권 모달 for 주문별 수금일정 ">

    <!-- Attribute -->
    <aura:attribute name="isLoading" type="Boolean" default="false" />
    <aura:attribute name="advList" type="List" default="[]" />

    <!--Handler-->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <!--Event-->
    <aura:registerEvent name="cmpEvent" type="c:DN_HandlerEvent" />

    <!-- Body -->
    <div aura:id="advListModal" class="slds-modal slds-fade-in-open">

        <!-- Modal Background -->
        <div class="modal-bg"></div>

        <div class="slds-modal__container">
            <article class="slds-card">

                <!-- Loading Spinner -->
                <aura:if isTrue="{! v.isLoading}">
                    <lightning:spinner size="large" variant="brand" alternativeText="Loading" />
                </aura:if>

                <!-- Close -->
                <button class="slds-modal__close">
                    <lightning:icon iconName='utility:close' alternativeText='close' variant='inverse' size='small'
                        title='close' name="closeModal" onclick="{!c.closeModal}"></lightning:icon>
                </button>

                <!-- Modal Header -->
                <header class="slds-modal__header">
                    <h2 class="slds-text-heading_medium">재조정 매출채권 리스트</h2>
                </header>

                <!-- Modal Body -->
                <div class="slds-modal__content">
                    <div class="table">
                        <table class="slds-table slds-table_cell-buffer   slds-table_col-bordered IP-table">
                            <thead>
                                <tr>
                                    <th>금액</th>
                                    <th>확정금액</th>
                                    <th>Clearing Document</th>
                                    <th>Clearing Fiscal Year</th>
                                    <th>통화</th>
                                </tr>
                            </thead>

                            <tbody>
                                <aura:if isTrue="{!empty(v.advList)}">
                                    <tr>
                                        <td colspan="5">No Data</td>
                                    </tr>
                                    <aura:set attribute="else">
                                        <aura:iteration items="{!v.advList}" var="adv" indexVar="index">
                                            <!-- 추후 예시데이터 확인되면 확인되면 값 전달 기능(onclick) 추가 -->
                                            <tr onclick="" data-index="{!index}">
                                                <td class="center">
                                                    <div>
                                                        <lightning:input type="text" name="amt" variant="label-hidden"
                                                            value="{!adv.amount}" readonly="true" />
                                                    </div>
                                                </td>
                                                <td class="center">
                                                    <div>
                                                        <lightning:formattedNumber value="{!adv.confirmAmt}" readonly="true" />
                                                        <!-- <lightning:input type="text" name="clearAmt"
                                                            variant="label-hidden" value="{!adv.confirmAmt}"
                                                            readonly="true" /> -->
                                                    </div>
                                                </td>
                                                <td class="center">
                                                    <div>
                                                        <lightning:input type="text" name="clearingDocument"
                                                            variant="label-hidden" value="{!adv.docNo}"
                                                            readonly="true" />
                                                    </div>
                                                </td>
                                                <td class="center">
                                                    <div>
                                                        <lightning:input type="text" name="clearingFiscalYear"
                                                            variant="label-hidden" value="{!adv.fiscalYear}"
                                                            readonly="true" />
                                                    </div>
                                                </td>
                                                <td class="center">{!adv.curr}
                                                    <!-- <div>
                                                        <lightning:input type="text" name="currency"
                                                            variant="label-hidden" value="{!adv.curr}"
                                                            readonly="true" />
                                                    </div> -->
                                                </td>
                                            </tr>
                                        </aura:iteration>
                                    </aura:set>
                                </aura:if>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Modal Footer -->
                <footer class="slds-modal__footer">
                    <lightning:button variant="neutral" label="Cancel" title="Brand action" onclick="{!c.closeModal}" />
                </footer>
            </article>
        </div>
    </div>
</aura:component>