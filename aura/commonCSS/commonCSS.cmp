    .card_template{
      padding: 1rem 1.25rem;
      margin: 0.75rem;
      background-color: #fff;
      border: 1px solid #D9D9D9;
      border-radius: 0.25rem;
      box-shadow: 0 2px 2px 0 rgb(82 82 82 / 10%);
    }
    <!-- Modal Close -->
    .close_button_template{
      position: absolute;   
      width: 2rem;
      height: 2rem;
      background: none;
