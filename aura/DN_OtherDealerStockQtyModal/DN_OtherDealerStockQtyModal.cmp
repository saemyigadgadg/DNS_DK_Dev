<!-- POListReview.cmp -->
<aura:component
  implements="forceCommunity:availableForAllPageTypes,force:lightningquickactionwithoutheader,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:hasSObjectName,force:lightningQuickAction,lightning:isUrlAddressable,lightning:actionOverride,lightning:hasPageReference,lightning:availableForFlowScreens"
  description="타 대리점 재고"
  controller="DN_OtherDealerStockQtyModal"
	extends="c:DN_Helper">

  <!-- attribute -->
  <aura:attribute name="partList" type="List" />
  <aura:attribute name="requestParts" type="Object" />
  <aura:attribute name="otherDealerStock" type="List" />
  <aura:attribute name="docNum" type="String" />
  <aura:attribute name="poQty" type="String" />
  <aura:attribute name="dealerStockList" type="Object" />
  <aura:attribute name="isSpinner" type="Boolean" default="false" />
  <aura:attribute name="partialAvailableStatus" type="String" default="⚪🟨⚪"/>
  <aura:attribute name="allAvailableStatus" type="String" default="⚪⚪🟢"/>

  <!-- handler -->
  <aura:handler name="init" value="{! this }" action="{! c.doInit }" />

  <!-- Event -->
  <aura:registerEvent name="cmpEvent" type="c:DN_HandlerEvent" />

  <div class="modal-wrap otherDealerStockModal">
    <div aura:id="otherDealerStockModal" class="slds-modal slds-fade-in-open">
      <div class="slds-modal__container slds-modal_large">

        <!-- Modal Header -->

        <header class="slds-modal__header">
          <h2 class="slds-text-heading_medium">타 대리점 재고</h2>

          <!-- Close -->
         <button class="slds-modal__close">
          <lightning:icon iconName='utility:close' alternativeText='close' variant='inverse' size='small'
            title='close' name="closeModal" onclick="{!c.otherDealerStockModalCancel}"></lightning:icon>
        </button>
        </header>

         

        <!-- Modal Body -->
        <div class="modal-body slds-modal__content relative">
          <aura:if isTrue="{!v.isSpinner}">
            <lightning:spinner alternativeText="Loading" size="small" />
          </aura:if>
          <!-- Card 01 -->
          <div class="card-01 top-card">
            <div class="filter-wrap">
              <div class="field-wrap">
                <div class="input-wrap">
                  <span></span>
                  <p>⚪🟨⚪: 부분 보유</p>
                </div>
                <div class="input-wrap">
                  <span></span>
                  <p>⚪⚪🟢: 전체 보유</p>
                </div>
              </div>
            </div>
            
          </div>

          <!-- Card 02 : 검색 결과 -->
          <div class="card-02 top-card">
            <div class="table-wrap">
              <table>
                <colgroup>
                  <col width="1%" />
                  <col width="9%" />
                  <col width="20%" />
                  <col width="20%" />
                  <col width="8%" />
                  <col width="8%" />
                  <col width="10%" />
                  <col width="10%" />
                  <col width="10%" />
                </colgroup>
                <thead>
                  <tr class="slds-line-height_reset">
                    <th>선택</th>
                    <th>재고보유</th>
                    <th>대리점 명</th>
                    <th>조회품번</th>
                    <th>요청수량</th>
                    <th>가용재고</th>
                    <th>판매가</th>
                    <th>할인율</th>
                    <th>할인판매가</th>
                  </tr>
                </thead>
                <tbody>
                  <aura:iteration items="{!v.dealerStockList}" var="dealerStock" indexVar="i">
                    <tr class="slds-hint-parent">
                      <td data-label="선택" class="center">
                        <div title="선택">
                          <lightning:input type="checkbox" aura:id="checkbox" data-dealer="{!dealerStock.dealer}" data-part="{!dealerStock.replacingPartName}" name="{!i}" variant="label-hidden"
                            checked="{!dealerStock.isSelected}" onchange="{!c.handleCheckboxChange}" />
                        </div>
                      </td>
                      <td data-label="재고보유" class="center">
                        <div title="재고보유">
                          <lightning:formattedText value="{!dealerStock.stockStatus}" />
                        </div>
                      </td>
                      <td data-label="대리점 명">
                        <div title="대리점 명">
                          <lightning:input type="text" name="name" variant="label-hidden" value="{!dealerStock.dealerName}"
                            readonly="true" />
                        </div>
                      </td>
                      <td data-label="조회품번">
                        <div title="조회품번">
                          <lightning:input type="text" name="number" variant="label-hidden" value="{!dealerStock.replacingPartName}"
                            readonly="true" />
                        </div>
                      </td>
                      <td data-label="요청수량" class="right">
                        <div title="요청수량">
                          <lightning:input type="text" name="request" variant="label-hidden" value="{!dealerStock.requestQuantity}"
                            readonly="true" />
                        </div>
                      </td>
                      <td data-label="가용재고" class="right">
                        <div title="가용재고">
                          <lightning:input type="text" name="available" variant="label-hidden" value="{!dealerStock.avaiableQuantity}"
                            readonly="true" />
                        </div>
                      </td>
                      <td data-label="판매가" class="right">
                        <div title="판매가">
                          <lightning:input type="number" name="sales" variant="label-hidden" value="{!dealerStock.customerPrice}"
                            readonly="true" />
                        </div>
                      </td>
                      <td data-label="할인율" class="right">
                        <div title="할인율">
                          <lightning:input type="number" name="discount" variant="label-hidden" value="{!dealerStock.discountRate}" formatter="percent-fixed"
                            readonly="true" />
                        </div>
                      </td>
                      <td data-label="할인판매가" class="right">
                        <div title="할인판매가">
                          <lightning:input type="number" name="discountprice" variant="label-hidden" value="{!dealerStock.discountPrice}"
                            readonly="true" />
                        </div>
                      </td>
                    </tr>
                  </aura:iteration>
                </tbody>
              </table>
            </div>
            
          </div>
        </div>

        <footer class="slds-modal__footer">
          <lightning:button variant="neutral" label="Close" title="Brand action" onclick="{!c.otherDealerStockModalCancel}" />
          <lightning:button name="select" label="확인" onclick="{!c.selectDealerStock}" />
        </footer>
      </div>
    </div>

    <div aura:id="otherDealerStockModalBackGround" class="slds-backdrop slds-backdrop_open" />
  </div>
</aura:component>