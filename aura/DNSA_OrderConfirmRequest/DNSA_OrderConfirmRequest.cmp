<aura:component implements="flexipage:availableForAllPageTypes,force:appHostable,force:hasRecordId,force:lightningQuickActionWithoutHeader,forceCommunity:availableForAllPageTypes"
                controller="DNSA_OrderConfirmRequestController">

    <aura:attribute type="Boolean" name="isLoading" default="true"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <aura:html tag="style">
        <!-- Modal Frame Settings -->
        .slds-modal__container:has(.cDNSA_OrderConfirmRequest) {
            width: 34rem;
            max-width: calc(100vw - 5rem);
            margin: 0 auto;
        }
        .slds-modal__content:has(.cDNSA_OrderConfirmRequest) {
            height:auto !important;
            max-height:none !important;
            padding: 0;
            overflow-y: clip;
        }
        .forceChatterBasePublisher :not(.PHONE) .cuf-content:has(.cDNSA_OrderConfirmRequest) {
            padding:0;
        }
        .slds-modal__container:has(.cDNSA_OrderConfirmRequest) .slds-modal__header .slds-modal__close {
            display: none;
        }
    </aura:html>

    
    <div class="modal_wrapper slds-modal__container">
        <aura:if isTrue="{! v.isLoading }">
            <lightning:spinner size="medium" alternativeText="Loading" />
        </aura:if>

        <header class="slds-modal__header">
            <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">DNSA {!$Label.c.DNS_H_RequestOrderConfirm}</h2>
        </header>

        <div class="slds-modal__content">
            {!$Label.c.DNS_M_RequestOrderConfrim}
            <!-- Would you like to send this order to the ERP system to request confirmation? -->
        </div>

        <footer class="slds-modal__footer">
            <lightning:button variant="Neutral" label="{!$Label.c.DNS_B_Cancel}" onclick="{!c.handleCancel}"/>
            <lightning:button variant="brand" label="{!$Label.c.DNS_B_Confirm}" onclick="{!c.handleConfirm}"/>
        </footer>
    </div>
</aura:component>