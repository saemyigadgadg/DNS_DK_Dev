                                        <lightning:input value="{!$Label.c.DNS_T_OptionGroup}" readonly="true" />
                                    </lightning:layoutItem>
                                    <lightning:layoutItem padding="around-small" size="6" class="slds-text-align_center">
                                        <lightning:input value="{!$Label.c.DNS_SelectedOption}" readonly="true" />
                                    </lightning:layoutItem>
                                    <aura:iteration items="{!v.options}" var="option" indexVar="index">
                                        <aura:if isTrue="{!option.mCheck}"> <!-- M_로 시작하는 값만 화면에 보여줘야함-->
                                            <lightning:layoutItem padding="around-small" size="6">
                                                <!-- <lightning:select name="colorId" value="{!v.selectedValue}">
                                                    <option text="{!option.c}" value="{!option.c}" />
                                                </lightning:select> -->
                                                <aura:if isTrue="{!not(option.color)}">
                                                    <lightning:input name="{!index}" value="{!option.c_value}" disabled="true"
                                                        class="default">
                                                    </lightning:input>
        
                                                </aura:if>
                                                <aura:if isTrue="{!option.color}">
                                                    <lightning:input name="{!index}" value="{!option.c_value}" disabled="true"
                                                        class="highlight">
                                                    </lightning:input>
        
                                                </aura:if>
                                            </lightning:layoutItem>
                                            <lightning:layoutItem padding="around-small" size="6">
                                                <lightning:select name="{!index}" value="{!option.selectedValue}"
                                                    onchange="{!c.handleChange}">
                                                    <aura:iteration items="{!option.v}" var="optionV" indexVar="vindex">
                                                        <option text="{!optionV}" value="{!vindex}" />
                                                    </aura:iteration>
                                                </lightning:select>
                                            </lightning:layoutItem>
                                        </aura:if>
                                    </aura:iteration>
                                </lightning:layout>
                            </div>
    
    
                        </div>

                        <aura:set attribute="else">
                            <div class="slds-form">
                                <!-- <aura:iteration items="{!v.recordIds}" var="recordId" indexVar="idx">
                                    <div> {!v.recordId}</div>
                                </aura:iteration> -->
        
                                <aura:if isTrue="{!v.status == 'NOCV'}">
                                    <div class="process-wrap">
                                        <div class="signal-wrap">
                                            <div class="signal-steps">
                                                <p class="signal on"></p>
                                                <p class="signal"></p>
                                                <p class="signal"></p>
                                            </div>
                                            <p class="message">{!v.errormessage}</p>
                                        </div>
                                        <div class="button-container">
                                            <div class="button-wrap">
                                                <lightning:button label="{!$Label.c.DNS_T_CVResetBtn}" title="Neutral action" onclick="{! c.openResetModal}"/>
                                            </div>
                                            <div class="button-group">
                                                <lightning:buttonGroup>
                                                    <lightning:button label="On" onclick="{!c.toggleOn}" class="{! if(v.isOn, 'active', '') }" />
                                                    <lightning:button label="Off" onclick="{!c.toggleOff}" class="{! if(not(v.isOn), 'active', '') }" />
                                                </lightning:buttonGroup>
                                            </div>
                                        </div>
                                    </div>
                                </aura:if>
        
                                <aura:if isTrue="{!v.status == 'INCOMPLETE'}">
                                    <div class="process-wrap">
                                        <div class="signal-wrap">
                                            <div class="signal-steps">
                                                <p class="signal on"></p>
                                                <p class="signal"></p>
                                                <p class="signal"></p>
                                            </div>
                                            <p class="message">{!v.errormessage}</p>
                                        </div>
                                        <div class="button-container">
                                            <div class="button-wrap">
                                                <lightning:button label="{!$Label.c.DNS_T_CVResetBtn}" title="Neutral action" onclick="{! c.openResetModal}"/>
                                            </div>
                                            <div class="button-group">
                                                <lightning:buttonGroup>
                                                    <lightning:button label="On" onclick="{!c.toggleOn}" class="{! if(v.isOn, 'active', '') }" />
                                                    <lightning:button label="Off" onclick="{!c.toggleOff}" class="{! if(not(v.isOn), 'active', '') }" />
                                                </lightning:buttonGroup>
                                            </div>
                                        </div>
                                    </div>
                                </aura:if>
        
                                <aura:if isTrue="{!v.status == 'INCONSISTANCE'}">
                                    <div class="process-wrap">
                                        <div class="signal-wrap">
                                            <div class="signal-steps">
                                                <p class="signal"></p>
                                                <p class="signal on"></p>
                                                <p class="signal"></p>
                                            </div>
                                            <p class="message">{!v.errormessage}</p>
                                        </div>
                                        <div class="button-container">
                                            <div class="button-wrap">
                                                <lightning:button label="{!$Label.c.DNS_T_CVResetBtn}" title="Neutral action" onclick="{! c.openResetModal}"/>
                                            </div>
                                            <div class="button-group">
                                                <lightning:buttonGroup>
                                                    <lightning:button label="On" onclick="{!c.toggleOn}" class="{! if(v.isOn, 'active', '') }" />
                                                    <lightning:button label="Off" onclick="{!c.toggleOff}" class="{! if(not(v.isOn), 'active', '') }" />
                                                </lightning:buttonGroup>
                                            </div>
                                        </div>
                                    </div>
                                </aura:if>
        
                                <aura:if isTrue="{!v.status == 'SUCCESS'}">
                                    <div class="process-wrap">
                                        <div class="signal-wrap">
                                            <div class="signal-steps">
                                                <p class="signal"></p>
                                                <p class="signal"></p>
                                                <p class="signal on"></p>
                                            </div>
                                            <p class="message">{!v.errormessage}</p>
                                        </div>
                                        <div class="button-container">
                                            <div class="button-wrap">
                                                <lightning:button label="{!$Label.c.DNS_T_CVResetBtn}" title="Neutral action" onclick="{! c.openResetModal}"/>
                                            </div>
                                            <div class="button-group">
                                                <lightning:buttonGroup>
                                                    <lightning:button label="On" onclick="{!c.toggleOn}" class="{! if(v.isOn, 'active', '') }" />
                                                    <lightning:button label="Off" onclick="{!c.toggleOff}" class="{! if(not(v.isOn), 'active', '') }" />
                                                </lightning:buttonGroup>
                                            </div>
                                        </div>
                                    </div>
                                </aura:if>
        
                                <lightning:layout multipleRows="true">
                                    <lightning:layoutItem padding="around-small" size="6" class="slds-text-align_center">
                                        <lightning:input value="{!$Label.c.DNS_T_OptionGroup}" readonly="true" />
                                    </lightning:layoutItem>
                                    <lightning:layoutItem padding="around-small" size="6" class="slds-text-align_center">
                                        <lightning:input value="{!$Label.c.DNS_SelectedOption}" readonly="true" />
                                    </lightning:layoutItem>
                                    <aura:iteration items="{!v.options}" var="option" indexVar="index">
                                        <aura:if isTrue="{!option.mCheck}"> <!-- M_로 시작하는 값만 화면에 보여줘야함-->
                                            <lightning:layoutItem padding="around-small" size="6">
                                                <!-- <lightning:select name="colorId" value="{!v.selectedValue}">
                                                    <option text="{!option.c}" value="{!option.c}" />
                                                </lightning:select> -->
                                                <aura:if isTrue="{!not(option.color)}">
                                                    <lightning:input name="{!index}" value="{!option.c_value}" disabled="true"
                                                        class="default">
                                                    </lightning:input>
        
                                                </aura:if>
                                                <aura:if isTrue="{!option.color}">
                                                    <lightning:input name="{!index}" value="{!option.c_value}" disabled="true"
                                                        class="highlight">
                                                    </lightning:input>
        
                                                </aura:if>
                                            </lightning:layoutItem>
                                            <lightning:layoutItem padding="around-small" size="6">
                                                <lightning:select name="{!index}" value="{!option.selectedValue}"
                                                    onchange="{!c.handleChange}">
                                                    <aura:iteration items="{!option.v}" var="optionV" indexVar="vindex">
                                                        <option text="{!optionV}" value="{!vindex}" />
                                                    </aura:iteration>
                                                </lightning:select>
                                            </lightning:layoutItem>
                                        </aura:if>
                                    </aura:iteration>
                                </lightning:layout>
                            </div>
                        </aura:set>
                    </aura:if>

                    <div class="slds-modal__footer">
                        <!-- <button class="slds-button slds-button_success" onclick="{!c.handleReset}">Reset</button> -->
                        <button class="slds-button slds-button_neutral" aria-label="Cancel and close"
                            onclick="{! c.handleClose }">{!$Label.c.DNS_B_Cancel}</button>
                        <aura:if isTrue="{!not(v.essentialReset)}">
                            <button class="slds-button slds-button_brand" onclick="{!c.handleSave}">{!$Label.c.DNS_B_Save}</button>
                        </aura:if>
                    </div>
                </div>
                
            </div>
        </section>
    </aura:if>

    <aura:if isTrue="{!v.isInconvalue}">
        <section role="dialog" tabindex="-1" aria-modal="true" aria-labelledby="modal-heading-01"
            class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <div class="slds-modal__header">
                    <h1 id="modal-heading-01" class="slds-modal__title slds-hyphenate" tabindex="-1">{!$Label.c.DNS_T_Inconsistent}</h1>
                </div>
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <aura:if isTrue="{!not(v.dataLoad)}">
                        <div class="exampleHolder">
                            <lightning:spinner alternativeText="Loading" size="large" />
                        </div>
                        </aura:if>
                    <div class="slds-form">
                        <!-- <aura:iteration items="{!v.recordIds}" var="recordId" indexVar="idx">
                            <div> {!v.recordId}</div>
                        </aura:iteration> -->
                        
                        <lightning:layout multipleRows="true">
                            <lightning:layoutItem padding="around-small" size="6" class="slds-text-align_center">
                                <lightning:input value="{!$Label.c.DNS_T_OptionGroup}" readonly="true" />
                            </lightning:layoutItem>
                            <lightning:layoutItem padding="around-small" size="6" class="slds-text-align_center">
                                <lightning:input value="{!$Label.c.DNS_SelectedOption}" readonly="true" />
                            </lightning:layoutItem>
                            <aura:iteration items="{!v.tInconValue}" var="incon" indexVar="index">
                                <lightning:layoutItem padding="around-small" size="6">
                                    <!-- <lightning:select name="colorId" value="{!v.selectedValue}">
                                        <option text="{!option.c}" value="{!option.c}" />
                                    </lightning:select> -->
                                    <aura:if isTrue="{!not(incon.color)}">
                                        <lightning:input name="{!index}" value="{!incon.c_value}" disabled="true"
                                            class="default">
                                        </lightning:input>

                                    </aura:if>
                                    <aura:if isTrue="{!incon.color}">
                                        <lightning:input name="{!index}" value="{!incon.c_value}" disabled="true"
                                            class="highlight">
                                        </lightning:input>

                                    </aura:if>
                                </lightning:layoutItem>
                                <lightning:layoutItem padding="around-small" size="6">
                                    <lightning:select name="{!index}" value="{!incon.selectedValue}"
                                        onchange="{!c.handleChangeIncon}">
                                        <aura:iteration items="{!incon.v}" var="inconV" indexVar="vindex">
                                            <option text="{!inconV}" value="{!vindex}" />
                                        </aura:iteration>
                                    </lightning:select>
                                </lightning:layoutItem>
                            </aura:iteration>
                        </lightning:layout>
                    </div>

                    <div class="slds-modal__footer">
                        <button class="slds-button slds-button_neutral" aria-label="Cancel and close"
                            onclick="{! c.handleCloseIncon }">{!$Label.c.DNS_B_Cancel}</button>
                        <button class="slds-button slds-button_brand" onclick="{!c.handleSubminIncon}">{!$Label.c.DNS_B_Save}</button>
                    </div>
                </div>
                
            </div>
        </section>
    </aura:if>
    <div class="slds-backdrop slds-backdrop_open" role="presentation"></div>

    <!-- Confirm Modal   -->
