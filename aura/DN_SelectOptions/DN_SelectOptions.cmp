        <div class="slds-modal slds-fade-in-open confirm-modal">
            <div class="slds-modal__container">
                <div class="slds-modal__header">
                    <h1 id="modal-heading-01" class="slds-modal__title slds-hyphenate">{!$Label.c.DNS_T_ResetTitle}</h1>
                </div>
                <div class="content-wrap">
                    <aura:if isTrue="{!not(v.dataLoad)}">
                        <div class="exampleHolder">
                            <lightning:spinner alternativeText="Loading" size="small" />
                        </div>
                    </aura:if>
                    <div class="slds-modal__content">
                       
                        <p>{!$Label.c.DNS_T_CVReset}</p>
                    </div>
                    <div class="slds-modal__footer">
                        <button class="slds-button slds-button_neutral" aria-label="Cancel and close"
                                onclick="{! c.closeConfirmModal }">{!$Label.c.DNS_B_Cancel}</button>
                        <button class="slds-button slds-button_brand" aria-label="Confirm" onclick="{!c.handleResetConfirm}"
                                >{!$Label.c.DNS_M_Confirm}</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="slds-backdrop slds-backdrop_open confirm-modal" role="presentation"></div>
    </aura:if>
</aura:component>