                <aura:if isTrue="{!v.isDNSA}">
                    <div class="sidebar-panel isDNSA">
                        <div class="panel-header">
                            <h1 id="modal-heading-01" class="slds-modal__title slds-hyphenate">Selected Option</h1>
                        </div>
                        <div class="tab-wrap">
                            <div class="{! (v.isTabSwitch ? 'tab on' : 'tab') }" onclick="{!c.handlePanelLeftTabs}">CV</div>
