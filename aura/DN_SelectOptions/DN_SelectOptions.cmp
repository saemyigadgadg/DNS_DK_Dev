                                            <p class="signal on"></p>
                                            <p class="signal"></p>
                                        </div>
                                        <p class="message">{!v.errormessage}</p>
                                    </div>
                                    <div class="button-container">
                                        <div class="button-wrap">
                                            <lightning:button label="{!$Label.c.DNS_T_CVResetBtn}" title="Neutral action" onclick="{! c.openResetModal}"/>
                                        </div>
                                        <div class="button-group">
                                            <lightning:buttonGroup>
                                                <lightning:button label="On" onclick="{!c.toggleOn}" class="{! if(v.isOn, 'active', '') }" />
                                                <lightning:button label="Off" onclick="{!c.toggleOff}" class="{! if(not(v.isOn), 'active', '') }" />
                                            </lightning:buttonGroup>
                                        </div>
                                    </div>
                                </div>
                            </aura:if>
    
                            <aura:if isTrue="{!v.status == 'SUCCESS'}">
                                <div class="process-wrap">
                                    <div class="signal-wrap">
                                        <div class="signal-steps">
                                            <p class="signal"></p>
                                            <p class="signal"></p>
                                            <p class="signal on"></p>
                                        </div>
                                        <p class="message">{!v.errormessage}</p>
                                    </div>
                                    <div class="button-container">
                                        <div class="button-wrap">
