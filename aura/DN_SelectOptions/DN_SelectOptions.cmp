                                    <div class="icon-wrap">
                                        <lightning:icon iconName='utility:error' alternativeText='error' size='small' title='error'></lightning:icon>
                                    </div>                                    
                                    <div class="text-wrap">
                                        <p class="description">
                                            {!$Label.c.DNS_M_COMPLEXCV}
                                        </p>
                                    </div>
                                </div>

                                <lightning:layout multipleRows="true">
                                    
