    <aura:registerEvent name="modalEvent" type="c.DN_HandlerEvent" />
    <aura:attribute name="recordIds" type="List" default="[]" />
    <aura:attribute name="options" type="List" default="[]" />
    <aura:attribute name="initData" type="List" default="[]" />
    <aura:attribute name="isInconvalue" type="Boolean" default="false" />
    <aura:attribute name="isCVvalue" type="Boolean" default="true" />
    <aura:attribute name="tInconValue" type="List" default="[]" />
    <aura:attribute name="defcvData" type="List" default="[]" />
    <aura:attribute name="upRecord" type="List" default="[]" />
    <aura:attribute name="tselData" type="List" default="[]" />
    <aura:attribute name="tresetselData" type="List" default="[]" /> <!-- reset버튼 눌렀을 때 teselData가 초기화가 되지만 저장하지않고 cancel눌렀을때 따시 tselData에 값을 넣어주기 위한 변수-->
    <aura:attribute name="dataLoad" type="Boolean" default="false" />
    <aura:attribute name="lineItemList" type="List" />
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="status" type="String" />
    <aura:attribute name="errormessage" type="String" />
    <aura:attribute name="color" type="Boolean" default="false" />
    <aura:attribute name="essentialReset" type="Boolean" default="false" />

    <aura:attribute name="factoryData" type="List" default="[]" />
    <aura:attribute name="previeousCVList" type="List" default="[]" />
    <aura:attribute name="isDNSA" type="Boolean" default="false" />
    <aura:attribute name="isPrevious" type="Boolean" default="false" />
    <aura:attribute name="isTabSwitch" type="Boolean" default="true" />
