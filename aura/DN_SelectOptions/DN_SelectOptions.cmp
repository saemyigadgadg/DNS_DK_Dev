                                            <div class="field">
                                                <span class="label">OPTION GROUP</span>
                                                <!-- <p>{!item.ATBEZ}</p> -->
                                                <p>{!item.ATBEZ}</p>
                                            </div>
                                            <span class="line"></span>
                                            <div class="field">
                                                <span class="label">SELECTED OPTION</span>
