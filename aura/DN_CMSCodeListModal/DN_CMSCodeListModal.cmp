<aura:component
  implements="forceCommunity:availableForAllPageTypes,force:lightningquickactionwithoutheader,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:hasSObjectName,force:lightningQuickAction,lightning:isUrlAddressable,lightning:actionOverride,lightning:hasPageReference,lightning:availableForFlowScreens"
  description="CMS 코드 리스트 모달">

  <!-- Attribute -->
  <aura:attribute name="cmsCodeList" type="List" default="[]" />
  <aura:attribute name="cmsCodeType" type="String" />

  <!--Handler-->
  <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

  <!--Event-->
  <aura:registerEvent name="cmpEvent" type="c:DN_HandlerEvent" />

  <div class="cmsCodeListModal">
    <div aura:id="cmsCodeListModal" class="slds-modal slds-fade-in-open">

      <div class="slds-modal__container slds-modal_large">

        <!-- Modal Header -->
        <header class="slds-modal__header">
          <h2 class="slds-text-heading_medium">CMS 코드 리스트</h2>

          <!-- Close -->
          <button class="slds-modal__close">
            <lightning:icon iconName='utility:close' alternativeText='close' variant='inverse' size='small'
              title='close' name="closeModal" onclick="{!c.closeModal}"></lightning:icon>
          </button>
        </header>

        <!-- Modal Body -->
        <div class="modal-body slds-modal__content">
          <div class="card-01 top-card">
            <table class="slds-table slds-table_cell-buffer slds-table_col-bordered IP-table">
              <thead>
                <tr class="slds-line-height_reset">
                  <th class="" scope="col">
                    <div class="slds-truncate" title="">CMS 코드</div>
                  </th>
                  <th class="" scope="col">
                    <div class="slds-truncate" title="">부서</div>
                  </th>
                  <th class="" scope="col">
                    <div class="slds-truncate" title="">계좌</div>
                  </th>
                </tr>
              </thead>

              <tbody>
                <!-- 값이 있을 때 -->
                <aura:if isTrue="{!v.cmsCodeList.length > 0}">
                  <!-- sendCMSCodeInfo - component.find("cmsCode").get("v.value")을 위해 index 부여 -->
                  <aura:iteration items="{!v.cmsCodeList}" var="cmsCode" indexVar="index">
                    <tr class="slds-hint-parent" onclick="{!c.sendCMSCodeInfo}" data-index="{!index}">
                      <td data-label="CMS 코드">
                        <div class="slds-truncate" title="CMS 코드">
                          <lightning:input type="text" name="cmsCode" variant="label-hidden" value="{!cmsCode.cmsCode}"
                            readonly="true" aura:id="cmsCode" />
                        </div>
                      </td>
                      <td data-label="부서">
                        <div class="slds-truncate" title="부서">
                          <lightning:input type="text" name="department" variant="label-hidden"
                            value="{!cmsCode.department}" readonly="true" aura:id="department" />
                        </div>
                      </td>
                      <td data-label="계좌">
                        <div class="slds-truncate" title="계좌">
                          <lightning:input type="text" name="account" variant="label-hidden" value="{!cmsCode.account}"
                            readonly="true" aura:id="account" />
                        </div>
                      </td>
                    </tr>
                  </aura:iteration>
                  
                  <!-- 값이 없을 때 -->
                  <aura:set attribute="else">
                    <tr>
                      <td colspan="3" style="text-align: center;">No Data</td>
                    </tr>
                  </aura:set>
                </aura:if>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Footer -->
        <footer class="slds-modal__footer">
          <lightning:button variant="neutral" label="Cancel" title="Brand action" onclick="{!c.closeModal}" />
        </footer>

      </div>
    </div>
    <!-- 배경 -->
    <div aura:id="modalBackGround" class="slds-backdrop slds-backdrop_open"></div>
  </div>
</aura:component>