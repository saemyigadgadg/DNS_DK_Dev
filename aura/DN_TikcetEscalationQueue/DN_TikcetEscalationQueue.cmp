<aura:component
    implements="lightning:isUrlAddressable,flexipage:availableForAllPageTypes,lightning:actionOverride,force:lightningQuickActionWithoutHeader,lightning:isUrlAddressable,force:hasRecordId,force:hasSObjectName"
    description="Queue Îì±Î°ù" controller="DN_TicketEscalationFailureDataController">
    <aura:attribute name="queueList" type="List" default="[]" />
    <aura:attribute name="isLoading" type="Boolean" default="false" />
    <aura:attribute name="openRegisterQueue" type="Boolean" default="false" />
    <aura:attribute name="options" type="List" />
    <aura:attribute name="selectedValue" type="String" />
    <aura:attribute name="selectedLabel" type="String"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <!-- <lightning:empApi aura:id="empApi" /> ÌîåÎû´Ìèº Ïù¥Î≤§Ìä∏ -->

    <lightning:card variant="Narrow">

        <header class="header">
            <div class="title">
                <div class="icon-wrap">
                    <lightning:icon iconName='standard:letterhead' alternativeText='letterhead' size='small' title='letterhead'></lightning:icon>
                </div>
                <h2>Queue</h2>
            </div>
            <lightning:button label="Queue Îì±Î°ù" title="Queue" onclick="{! c.registerQueue }" />
        </header>


        <aura:if isTrue="{!v.isLoading}">
            <lightning:spinner variant="brand" size="large" aura:id="spinner" />
        </aura:if>

        <div class="card-02 top-card">
            <div class="table-02">
                <table class="slds-table slds-table_cell-buffer slds-table_col-bordered IP-table">
                    <colgroup>
                        <col width="80%" />
                        <col width="20%" />
                    </colgroup>
                    <thead>
                        <tr>
                            <th scope="col">
                                <div class="slds-truncate" title="" style="text-align: center;">Queue Name</div>
                            </th>
                            <th scope="col">
                                <div class="slds-truncate" title=""></div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <aura:if isTrue="{!empty(v.queueList)}">
                            <tr>
                                <td scope="row" colspan="7" style="text-align: center;">
                                    <p>Îì±Î°ùÎêú Queue Î™©Î°ùÏù¥ ÏóÜÏäµÎãàÎã§.</p>
                                </td>
                            </tr>
                        </aura:if>
                        <aura:iteration items="{!v.queueList}" var="queueList" indexVar="j">
                            <tr>
                                <td scope="row">
                                    <div>{!queueList.Name}</div>
                                </td>
                                <td scope="row">
                                    <div>
                                        <lightning:buttonicon iconName="utility:delete" accesskey="{!j}"
                                            onclick="{!c.queueDelete}" />
                                    </div>
                                </td>
                            </tr>
                        </aura:iteration>
                    </tbody>
                </table>
            </div>
        </div>
    </lightning:card>

    <!-- üìå 1. Queue Îì±Î°ù Î™®Îã¨ -->
    <aura:if isTrue="{!v.openRegisterQueue}">
        <div>
            <div aura:id="queueListModal" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container">

                    <!-- Modal Header -->
                    <header class="slds-modal__header">
                        <h2 class="slds-text-heading_medium">Queue Îì±Î°ù</h2>
                    </header>
                    
                    <!-- Modal Body -->
                    <div class="modal-body slds-modal__content">
                        <div class="card-02 top-card">
                            <div class="slds-scrollable">
                                <lightning:select name="mySelect" label="Queue List" aura:id="mySelect" value="{!v.selectedValue}" onchange="{!c.changeQueue}">
                                    <option value="" selected="true"></option>
                                    <aura:iteration items="{!v.options}" var="item">
                                        <option text="{!item.label}" value="{!item.value}" />
                                    </aura:iteration>
                                </lightning:select>
                            </div>
                        </div>
                    </div>

                    <!-- Modal Footer -->
                    <footer class="slds-modal__footer">
                        <lightning:buttonGroup>
                            <lightning:button variant="neutral" label="Ï∑®ÏÜå" title="Brand action"
                                onclick="{!c.queueListCancel}" />
                            <lightning:button variant="brand" label="Îì±Î°ù" title="Brand action"
                                onclick="{!c.queueRegister}" />
                        </lightning:buttonGroup>
                    </footer>
                </div>
            </div>

            <div aura:id="modalBackGround" class="slds-backdrop slds-backdrop_open"></div>
        </div>
    </aura:if>
</aura:component>