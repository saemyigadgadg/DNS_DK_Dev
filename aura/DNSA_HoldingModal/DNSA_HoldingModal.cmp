<aura:component implements="flexipage:availableForAllPageTypes,force:appHostable,force:hasRecordId,force:lightningQuickActionWithoutHeader,forceCommunity:availableForAllPageTypes"
                controller="DN_CommodityController">

    <aura:attribute name="isLoading"    type="Boolean"  default="false"/>
    <aura:attribute name="recordId"     type="String" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <!-- ðŸš©Aura Style -->
    <aura:html tag="style">
        <!-- ê¸°ë³¸ í”„ë ˆìž„ ì„¸íŒ… -->
        .slds-modal__container:has(.cDNSA_HoldingModal) {
            width:100%;
            max-width: 32rem;
            padding: 0 !important;
        }
        .slds-modal__content:has(.cDNSA_HoldingModal) {
            height:auto !important;
            max-height:none !important;
            padding: 0;
            overflow-y: clip;
        }
        .forceChatterBasePublisher :not(.PHONE) .cuf-content:has(.cDNSA_HoldingModal) {
            padding:0;
        }
    </aura:html>

    <div class="slds-modal__container">

        <aura:if isTrue="{! v.isLoading }">
            <lightning:spinner size="medium" alternativeText="Loading" />
        </aura:if>

        <!-- ðŸš© Modal Header -->
        <header class="slds-modal__header">
            <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate" aura:id="test">Holding</h2>
            <!-- Close Button -->
            <button class="close_button_template slds-modal__close">
                <lightning:icon iconName='utility:close' alternativeText='close' variant='inverse' size='small' title='close' name="closeModal" onclick="{!c.closeModal}">
                </lightning:icon>
            </button>
        </header>

        <!-- ðŸš© Modal Body -->
        <div class="slds-modal__content">
            <div class="modal-body">
                <p class="text">{!$Label.c.DNSA_QUOTE_T_HOLDING}</p>
            </div>
        </div>

        <!-- ðŸš©Modal Footer -->
        <footer class="slds-modal__footer">
            <lightning:button variant="Neutral" label="{!$Label.c.DNS_B_Cancel}" onclick="{!c.handleCancel}"/>
            <lightning:button variant="brand" label="{!$Label.c.DNS_B_Confirm}" onclick="{!c.handleClickConfirm}"/>
        </footer>
    </div>
</aura:component>