<aura:component implements="forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader,force:hasRecordId,force.hasSObjectName,lightning:actionOverride"
                controller="DN_CreateSalesAreaDataController"
                description="New Sales Area Data Modal">

    <!-- ðŸš©Aura Attribute -->
    <aura:attribute name="isLoading"    type="Boolean"  default="false" />
    <aura:attribute name="recordId"     type="String" />

    <!-- ðŸš©Aura Handler -->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <lightning:overlayLibrary aura:id="overlayLib" />

    <!-- ðŸš©Aura Style -->
    <aura:html tag="style">
        <!-- ê¸°ë³¸ í”„ë ˆìž„ ì„¸íŒ… -->
        .slds-modal__container:has(.cDN_CreateSalesAreaDataModal) {
            width: 40rem;
            max-width: calc(100vw - 8rem);
            margin: auto;
            padding: 0;
            padding-top: 1rem;
        }
        .slds-modal__content:has(.cDN_CreateSalesAreaDataModal) {
            padding: 0;
            <!-- overflow-y: clip; -->
            height: unset !important;
            max-height: unset !important;
        }
        .forceChatterBasePublisher :not(.PHONE) .cuf-content:has(.cDN_CreateSalesAreaDataModal) {
            padding:0;
        } 
        .lightning-primitive-icon {
            disply: none;
        }
    </aura:html>

    <div class="slds-modal__container">
        <!-- ðŸš© Modal Header -->
        <header class="slds-modal__header">
            <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate" aura:id="test">New Sales Area Data</h2>
        </header>

        <div class="slds-modal__content">
            <!-- ðŸš©Loading Spinner -->
            <aura:if isTrue="{! v.isLoading }">
                <lightning:spinner size="large" variant="brand" alternativeText="Loading" />
            </aura:if>
                    
            <!-- ðŸš©Modal Footer -->
            <div class="slds-modal__footer">
                <lightning:button onclick="{! c.handleClickClose }" label="Cancel" />
                <lightning:button variant="brand" onclick="{! c.handleClickSave }" label="Save" />
            </div>
        </div>
    </div>  

</aura:component>