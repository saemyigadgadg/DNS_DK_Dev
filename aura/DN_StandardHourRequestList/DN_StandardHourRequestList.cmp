<aura:component
    implements="forceCommunity:availableForAllPageTypes,force:lightningquickactionwithoutheader,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:hasSObjectName,force:lightningQuickAction,lightning:isUrlAddressable,lightning:actionOverride,lightning:hasPageReference,lightning:availableForFlowScreens"
    description="표준공수요청목록" controller="DN_StandardMHApprovalController">

    <!-- attribute -->
    <aura:attribute name="isLoading"      type="boolean" default="false" />
    <aura:attribute name="statusList"     type="List" />
    <aura:attribute name="selectedStatus" type="String" default="전체" />
    <aura:attribute name="requestList"    type="List" />
    <aura:attribute name="openApproval"   type="boolean" default="false" />
    <aura:attribute name="openReject"     type="boolean" default="false" />
    <aura:attribute name="selectedIndex"  type="Integer" />
    <aura:attribute name="rejectReason"   type="String" />
    <aura:attribute name="modelManager"   type="String" />
    <aura:attribute name="startDate"      type="Date" />
    <aura:attribute name="endDate"        type="Date" />
    <aura:attribute name="orderNumber"    type="String" />

    <!-- handler -->
    <aura:handler name="init" value="{! this }" action="{! c.doInit }" />

    <!--표준공수요청목록-->
    <div class="total-wrap">

        <article class="slds-card">

            <!-- Loading Spinner -->
            <aura:if isTrue="{! v.isLoading }">
                <lightning:spinner size="large" variant="brand" alternativeText="Loading..." />
            </aura:if>

            <!-- Header -->
            <div class="header">
                <div class="title slds-grid">
                    <lightning:icon iconName='standard:custom_component_task' size='small' />
                    <h2 class="slds-truncate">표준공수 변경요청</h2>
                </div>
            </div>

            <!-- Body -->
            <div class="body">
                <div class="top-card card-01">

                    <div class="field-container">
                        <div class="field-wrap field-01">
                            <p>오더번호</p>
                            <div class="input-wrap">
                                <lightning:input type="text" name="searchOrderNumber" variant="label-hidden" value="{! v.orderNumber }" />
                            </div>
                        </div>
    
                        <div class="field-wrap field-02">
                            <p>요청기간</p>
                            <div class="input-wrap">
                                <lightning:input type="Date" name="searchStartDate" value="{! v.startDate }" variant="label-hidden" />
                                <span>~</span>
                                <lightning:input type="Date" name="searchEndDate" value="{! v.endDate }" variant="label-hidden" />
                            </div>
                        </div>
    
                        <div class="field-wrap field-03">
                            <p>기종담당자</p>
                            <div class="input-wrap">
                                <lightning:recordEditForm objectApiName="RequestStandardHR__c">
                                    <lightning:inputField fieldName="Approver__c" value="{!v.modelManager}"
                                        variant="label-hidden" />
                                </lightning:recordEditForm>
                            </div>
                        </div>
    
                        <div class="field-wrap field-04">
                            <p>상태</p>
                            <div class="input-wrap">
                                <lightning:combobox name="searchStatus" value="{! v.selectedStatus }"
                                    options="{! v.statusList }" variant="label-hidden" />
                            </div>
                        </div>
                    </div>

                    <div class="button-wrap">
                        <lightning:button type="variant" name="searchButton" label="조회"
                            onclick="{!c.handleSearch}" variant="brand" />
                    </div>
                </div>

                <!-- Card 02 : 검색 결과 테이블 -->
                <div class="top-card card-02">
                    <div class="table-wrap">
                        <table class="slds-table slds-table_cell-buffer slds-table_col-bordered IP-table">
                            <thead>
                                <tr class="slds-line-height_reset">
                                    <th rowspan="2">
                                        <div class="slds-truncate" title="">오더번호</div>
                                    </th>
                                    <th rowspan="2">
                                        <div class="slds-truncate" title="">고장부위</div>
                                    </th>
                                    <th rowspan="2">
                                        <div class="slds-truncate" title="">표준공수항목</div>
                                    </th>
                                    <th rowspan="2">
                                        <div class="slds-truncate" title="">요청자</div>
                                    </th>
                                    <th colspan="2">
                                        <div class="slds-truncate" title="">표준공수</div>
                                    </th>
                                    <th rowspan="2">
                                        <div class="slds-truncate" title="">요청구분</div>
                                    </th>
                                    <th colspan="2">
                                        <div class="slds-truncate" title="">신규/변경 표준공수</div>
                                    </th>
                                    <th rowspan="2">
                                        <div class="slds-truncate" title="">변경요청사유</div>
                                    </th>
                                    <th rowspan="2">
                                        <div class="slds-truncate" title="">기종담당자</div>
                                    </th>
                                    <th rowspan="2">
                                        <div class="slds-truncate" title="">상태</div>
                                    </th>
                                    <th colspan="2">
                                        <div class="slds-truncate" title="">구분</div>
                                    </th>
                                    <th rowspan="2">
                                        <div class="slds-truncate" title="">반려사유</div>
                                    </th>
                                </tr>
                                <tr class="slds-line-height_reset">
                                    <th>
                                        <div class="slds-truncate" title="">시간</div>
                                    </th>
                                    <th>
                                        <div class="slds-truncate" title="">인원</div>
                                    </th>
                                    <th>
                                        <div class="slds-truncate" title="">시간</div>
                                    </th>
                                    <th>
                                        <div class="slds-truncate" title="">인원</div>
                                    </th>
                                    <th>
                                        <div class="slds-truncate" title="">승인</div>
                                    </th>
                                    <th>
                                        <div class="slds-truncate" title="">반려</div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <aura:iteration items="{!v.requestList}" var="request" indexVar="j">
                                    <tr class="slds-hint-parent">
                                        <td>
                                            <div class="slds-truncate" title="">{! request.orderNumber }</div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">{! request.failureArea }</div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">{! request.standardHourItem }</div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">{! request.requester }</div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">{! request.standardHourTime }</div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">{! request.standardHourForce }</div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">{! request.changeNeed }</div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">{! request.realWorkTime }</div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">{! request.realWorkForce }</div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">{! request.requestReason }</div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">{! request.modelManager }</div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">{! request.requestStatus }</div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">
                                                <aura:if isTrue="{! request.requestStatus == '승인대기'}">
                                                    <lightning:button type="variant" name="Approval" label="승인"
                                                        accesskey="{!j}" onclick="{!c.clickApproval}" />
                                                </aura:if>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">
                                                <aura:if isTrue="{! request.requestStatus == '승인대기'}">
                                                    <lightning:button type="variant" name="Reject" label="반려"
                                                        accesskey="{!j}" onclick="{!c.clickReject}" />
                                                </aura:if>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="slds-truncate" title="">{! request.rejectReason }</div>
                                        </td>
                                    </tr>
                                </aura:iteration>
                            </tbody>
                        </table>
                    </div>

                    <div class="row-check">ROW : {!v.requestList.length}</div>
                </div>
            </div>
        </article>
    </div>

    <!-- 승인 Modal -->
    <aura:if isTrue="{! v.openApproval }">
        <div class="slds-modal slds-fade-in-open" aura:id="confirmModal">
            <div class="slds-modal__container slds-modal_large">
                <!-- Modal Header -->
                <header class="slds-modal__header">
                    <h2 class="slds-text-heading_medium">승인</h2>
                </header>

                <!-- Modal Body -->
                <div class="modal-body slds-modal__content slds-p-around_medium">
                    <div class="icon-wrap">
                        <lightning:icon iconName='utility:check' alternativeText='download' size='Small'
                            title='download'> </lightning:icon>
                    </div>
                    <p>해당 표준공수 신규/변경 요청을 승인하시겠습니까?</p>
                </div>

                <!-- Modal Footer -->
                <footer class="slds-modal__footer">
                    <lightning:button variant="neutral" label="취소" title="Brand action" onclick="{!c.cancelApprove}" />
                    <lightning:button variant="brand" label="승인" title="Brand action" onclick="{!c.approveRequest}" />
                </footer>
            </div>s
        </div>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>

    <!-- 반려 Modal -->
    <aura:if isTrue="{! v.openReject }">
        <div class="slds-modal slds-fade-in-open" aura:id="confirmModal">
            <div class="slds-modal__container slds-modal_large">
                <!-- Modal Header -->
                <header class="slds-modal__header">
                    <h2 class="slds-text-heading_medium">반려</h2>
                </header>

                <!-- Modal Body -->
                <div class="modal-body slds-modal__content slds-p-around_medium">
                    <!-- <div class="icon-wrap">
                        <lightning:icon iconName='utility:check' alternativeText='download' size='Small'
                            title='download'>
                        </lightning:icon>
                    </div> -->
                    <div class="textarea">
                        <lightning:textarea name="Reject Reason" required="true" value="{!v.rejectReason}"
                            label="반려사유" />
                    </div>

                </div>

                <!-- Modal Footer -->
                <footer class="slds-modal__footer">
                    <lightning:button variant="neutral" label="취소" title="Brand action" onclick="{!c.cancelReject}" />
                    <lightning:button variant="brand" label="반려" title="Brand action" onclick="{!c.rejectRequest}" />
                </footer>
            </div>
        </div>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
</aura:component>