<aura:component implements="force:hasRecordId,flexipage:availableForAllPageTypes,force:appHostable,force:hasRecordId,force:lightningQuickActionWithoutHeader,force.hasSObjectName"
                access="global">

    <aura:attribute name="isLoading"    type="Boolean"  default="false" />
    <aura:attribute name="sqText"       type="String"   default="" />
    <aura:attribute name="textList"       type="List"   default="" />
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>

    <aura:registerEvent name="modalEvent" type="c.DN_HandlerEvent" />

    <div class="descriptionModal">

        <div class="slds-backdrop slds-backdrop_open" role="presentation"></div>
        
        <div class="slds-modal slds-fade-in-open">

            <div class="slds-modal__container">

                <div class="slds-modal__header">
                    <h1 class="slds-modal__title slds-hyphenate">SQ Option</h1>
                </div>

                <div class="slds-modal__content modal-body">

                    <ul class="text-wrap">
                        <aura:iteration items="{!v.textList}" var="text">
                            <li class="row">{!text}</li>
                        </aura:iteration>
                    </ul>

                </div>

                <div class="slds-modal__footer">
                    <lightning:button class="slds-button slds-button_neutral" label="Close"
                    onclick="{! c.handleClickClose }" />
                </div>
            </div>

            

        </div>


    </div>

</aura:component>