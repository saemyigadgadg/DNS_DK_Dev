<aura:component
  implements="forceCommunity:availableForAllPageTypes,force:lightningquickactionwithoutheader,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:hasSObjectName,force:lightningQuickAction,lightning:isUrlAddressable,lightning:actionOverride,lightning:hasPageReference,lightning:availableForFlowScreens"
  Controller="DN_PortalPartsOrderStatusController"
  access="global" 
  description="납기 조회 모달">

  <!-- attribute -->
  <aura:attribute name="isLoading"        type="Boolean" default="false" />
  <aura:attribute name="selectOrderNo"    type="String" />
  <aura:attribute name="selectCustomerNo" type="String" />
  <aura:attribute name="selectOrderDate"  type="String" />
  <aura:attribute name="itemsList"        type="List" />
  <aura:attribute name="UrgencyOptions"   type="List" default="[
  {'label': '&nbsp;','value': 'false' },
  {'label': '긴급','value': 'true' },
]" />

  <aura:attribute name="partOrderNo"  type="String" />
  <aura:attribute name="startDate"    type="String" />
  <aura:attribute name="endDate"      type="String" />
  <aura:attribute name="dealerInfo"   type="Object" />
  <aura:attribute name="tList"        type="List"   />
  <aura:attribute name="poiList"      type="PurchaseOrderItems__c" />

  <!-- Handler -->
  <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

  <!-- Event -->
  <aura:registerEvent name="cmpEvent" type="c:DN_HandlerEvent" />

  <!-- Loading Spinner  -->
  <aura:if isTrue="{! v.isLoading}">
    <lightning:spinner size="large" variant="brand" alternativeText="Loading" />
  </aura:if>
  

  <!-- 납기 조회 모달 -->
  <div class="orderStatusDetailModal">
    <div aura:id="orderStatusDetailModal" class="slds-modal slds-fade-in-open">
      <div class="slds-modal__container">
        <!-- Header -->
        <header class="slds-modal__header">
          <div class="header-wrap">
            <h2 class="slds-text-heading_medium">Order Status Detail</h2>
          </div>
          <div class="button-wrap">
            <lightning:button name="save" label="{!$Label.c.DNS_B_Save}" iconName="utility:save" iconPosition="left"
              onclick="{!c.doSave}" />
            <lightning:button name="Excel" label="Excel" iconName="doctype:excel" iconPosition="left"
              onclick="{!c.downModalExcel}" />
            <!-- <c:DN_ExcelUtilButton excelData="" excelName="" /> -->
          </div>
          <!-- Close Button -->
          <button class="close_button_template slds-modal__close">
            <lightning:icon iconName='utility:close' alternativeText='close' variant='inverse' size='small'
              title='close' name="closeModal" onclick="{!c.ModalCancel}"></lightning:icon>
          </button>
        </header>


        <div class="modal-body slds-modal__content">
          <div class="card-01 top-card">
            <div class="field-wrap">
              <p class="label">{!$Label.c.DNS_C_OrderNum} <!-- 주문번호 --></p>
              <div class="input-wrap">
                {!v.partOrderNo}
              </div>
            </div>
            <div class="field-wrap">
              <p class="label">{!$Label.c.RC_CustomerOrderNumber} <!-- 고객주문번호 --></p>
              <div class="input-wrap">
                {!v.tList[0].customerOrderNo}
              </div>
            </div>
            <div class="field-wrap">
              <p class="label">{!$Label.c.DDM_OrderDate} <!-- 주문날짜 --></p>
              <div class="input-wrap">
                {!v.tList[0].orderDate}
              </div>
            </div>
          </div>
          <div class="card-02 top-card">
            <div class="table-wrap">
              <table>
                <colgroup>
                  <col width="1%" />
                  <col width="10%" />
                  <col width="10%" />
                  <col width="10%" />
                  <col width="10%" />
                  <col width="5%" />
                  <col width="5%" />
                  <col width="5%" />
                  <col width="5%" />
                  <col width="10%" />
                  <col width="10%" />
                  <col width="10%" />
                  <col width="10%" />
                </colgroup>
                <thead>
                  <tr>
                    <th rowspan="2">{!$Label.c.DNS_C_Number} <!-- 번호 --></th>
                    <th rowspan="2">{!$Label.c.DDM_Item} <!-- 품목 --></th>
                    <th rowspan="2">{!$Label.c.ORC_SupplyNumber} <!-- 공급품번 --></th>
                    <th rowspan="2">{!$Label.c.service_lbl_part_name} <!-- 품명 --></th>
                    <th rowspan="2" style="border-right: 1px solid #d9d9d9;">{!$Label.c.DNS_F_Urgency} <!-- 긴급도 --></th>
                    <th colspan="4">{!$Label.c.DNS_C_Quantity} <!-- 수량 --></th>
                    <th rowspan="2">{!$Label.c.DDM_ExpectedSupplyDate} <!-- 예상공급일 --></th>
                    <th rowspan="2">{!$Label.c.DNS_FSL_ChangedSupplyDate} <!-- 변경공급 예정일 --></th>
                    <th rowspan="2">{!$Label.c.DDM_ShippingDate} <!-- 출고일 --></th>
                    <th rowspan="2">{!$Label.c.DDM_ShippingLocation} <!-- 발송지점 --></th>
                  </tr>
                  <tr>
                    <th>{!$Label.c.Order} <!-- 주문 --></th>
                    <th>{!$Label.c.DNS_SQR_B_CONFIRM} <!-- 확정 --></th>
                    <th>{!$Label.c.DNS_FSL_Wait} <!-- 대기 --></th>
                    <th>{!$Label.c.DNS_FSL_Complete} <!-- 완료 --></th>
                  </tr>
                </thead>
                <aura:iteration items="{!v.tList}" var="il" indexVar="j">
                  <tbody>
                    <tr>
                      <td class="center">{!j+1}</td>
                      <td>{!il.itemNo}</td>
                      <td>{!il.supplyPartNo}</td>
                      <td>{!il.partName}</td>
                      <td>
                        <lightning:combobox name="Urgency__c" label="Urgency" variant="label-hidden" accesskey="{!j}"
                          value="{!il.urgency}" options="{!v.UrgencyOptions}" onchange="{! c.handleChange }" placeholder="&nbsp;"/>
                      </td>
                      <td class="center">{!il.orderQty}</td>
                      <td class="center">{!il.confirmQty}</td>
                      <td class="center">{!il.stayQty}</td>
                      <td class="center">{!il.completeQty}</td>
                      <td>{!il.estimatedSupplyDate}</td>
                      <td>{!il.changeSupplyDate}</td>
                      <td>{!il.shippingDate}</td>
                      <td>{!il.shippingSpot}</td>
                    </tr>
                  </tbody>
                </aura:iteration>
              </table>
            </div>
          </div>
        </div>
        <footer class="slds-modal__footer">
          <lightning:button variant="neutral" label="Cancel" title="Brand action" onclick="{!c.ModalCancel}" />
        </footer>
      </div>
    </div>
    <!-- 배경 -->
    <div aura:id="modalBackGround" class="slds-backdrop slds-backdrop_open"></div>
  </div>
</aura:component>