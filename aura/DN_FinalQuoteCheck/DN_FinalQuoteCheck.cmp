<aura:component controller="DN_FinalQuoteCheckController"
    implements="flexipage:availableForAllPageTypes,force:appHostable,force:hasRecordId,force:lightningQuickActionWithoutHeader,forceCommunity:availableForAllPageTypes"
    access="global">

    <aura:attribute name="recordId" type="String" />
    <aura:attribute type="List" name="btnType" default="" />
    <aura:attribute type="String" name="value" default="" />
    <aura:attribute name="FPAmount" type="Decimal" />

    <aura:attribute type="String" name="title" default="" />
    <aura:attribute type="String" name="subtitle" default="" />
    <aura:attribute type="String" name="confirm" default="" />
    <aura:attribute type="String" name="cancel" default="" />
    <aura:attribute type="String" name="label" default="" />
    <aura:attribute name="isStatus" type="Boolean" default="false" />
    <aura:attribute name="dataLoad" type="Boolean" default="false" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <aura:html tag="style">
        .slds-modal__container:has(.cDN_FinalQuoteCheck) {
        width:100%;
        max-width: 36rem;
        }
        .slds-modal__content:has(.cDN_FinalQuoteCheck) {
        height:auto !important;
        max-height:none !important;
        padding: 0;
        overflow-y: clip;
        }
        .forceChatterBasePublisher :not(.PHONE) .cuf-content:has(.cDN_FinalQuoteCheck) {
        padding:0;
        }
        .runtime_platform_actionsQuickActionWrapper .quick-actions-panel:has(.cDN_FinalQuoteCheck){
        overflow: hidden;
        }
    </aura:html>

    <!-- <div class="slds-modal__container">
        <div class="slds-modal__header">
            ddd
        </div>
        <div class="slds-modal__content">
            <h1 class="title">최종 견적 확정 하시겠습니까?</h1>
        </div>
        <div class="slds-modal__footer">
            <lightning:radioGroup name="radioButtonGroupRequired"
            options="{! v.btnType }"
            value="{! v.value }"
            type="button"
            required="false"
            onchange="{!c.selectBtn}"/>
        </div>

    </div> -->
    <aura:if isTrue="{!v.isStatus}">
        <div class="slds-modal__container">
            <!-- Header -->
            <div class="slds-modal__header slds-theme_shade slds-theme_alert-texture">
                <h2 class="slds-text-heading_medium slds-hyphenate">{!v.title}</h2>
            </div>
            <!-- Body -->
            <div class="slds-modal__content">
                <aura:if isTrue="{!not(v.dataLoad)}">
                    <lightning:spinner alternativeText="Loading" size="large" />
                </aura:if>
                <p>{!v.subtitle}</p>
                <div class="input-wrap">
                    <lightning:input aura:id="FPAmount" type="Decimal" value="{!v.FPAmount}" name="FPAmount" label="{!v.label}" required="true" />
                </div>
            </div>
            <!-- Footer -->
            <div class="slds-modal__footer slds-grid">
                <lightning:radioGroup 
                    name="radioButtonGroupRequired" 
                    options="{! v.btnType }" 
                    value="{! v.value }"
                    type="button" 
                    required="false"
                    onchange="{!c.selectBtn}" />
            </div>
        </div>
    </aura:if>
</aura:component>