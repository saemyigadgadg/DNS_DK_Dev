<apex:page standardController="PurchaseOrder__c"
           extensions="DN_PurchaseOrderPDFController" 
           showHeader="false" 
           standardStylesheets="false" 
           sidebar="false" 
           renderAs="pdf" 
           applyHtmlTag="false"
           contentType="text/html;charset=UTF-8" >

  <!-- Static Resource -->

  <head>
    <meta charset="UTF-8" />
    <link href="https://fonts.googleapis.com/css?family=Nanum+Gothic" rel="stylesheet" />
    <style type="text / css">
      @page {
				padding: 16px;
				margin: 0; 
				@bottom-center {
					content: counter(page);
					font-family: Arial Unicode MS, Helvetica, sans-serif;
				} 
			}
			.page-break {
            page-break-after:always;
        }
        body {
            font-family: Arial Unicode MS;
            font-weight: 600;
        }
        h1,h2,h3,h4,h5,h6,a,p,span, div{
            font-family: Arial Unicode MS;
            font-size: 11px;
        }
        p, div, span, table, h1, h2, h3, h4{
          margin: 0;
          padding: 0;
        }
        table{ width: 100%; margin: 0; padding: 0; border-top: 1px solid #000 !important; border-collapse : collapse;}  
        th, td{
          border: 1px solid #000; 
          border-collapse : collapse;
          padding: 3px;
        }
        html, body{padding-top: 0; margin: 0; font-size: 13px;}
        ul{list-style: none; padding: none; margin: 0;}
        /* border-none */
        .b-top    {border-top: 0;}
        .b-right  {border-right: 0;}
        .b-bottom {border-bottom: 0;}
        .b-left   {border-left: 0;}
        .t-left   {text-align: left;}
        .t-center {text-align: center;}
        .t-right  {text-align: right;}
      /* flex */
      /* Begin Custom Grid System */
      .clearfix {
                clear: both;
      }
      .row {
          display: block;
      }
      .col {
          float: left;
      }
      .size-1-of-2 {
          width: 48%;
      }
      .size-1-of-3 {
          width: 33.33%;
      }
      .size-1-of-4 {
          width: 25%;
      }
      .size-1-of-5 {
          width: 20%;
      }
      /* End Custom Grid System */

      /* custom css */
      .header .img-wrap {
        float: right;
      }
      .header .img-wrap img {
        width: 160px;
        height: auto;
      }
      .header .title {
        padding-top: 110px;
      }
      .header .title h2 {
        font-size: 28px;
      }

      /* table */
      .table-wrap p {
        text-align: right;
        border-bottom: 3px solid #000;
      }
      .table-wrap table.table-01 {
        margin-bottom: 30px;
        border-top: 3px solid #000;
      }
      .table-wrap table.table-01 tr th {
        padding-left: 5px;
      }
      .table-wrap table.table-01 tr td {
        padding-left: 15px;
      }

      .table-wrap table.table-02 th,
      .table-wrap table.table-02 td {
        border-left: none;
        border-right: none;
      }


    </style>
  </head>

  <body>
    <div class="header">
      <div class="img-wrap">
        <img src="{!$Resource.LOGO_returnDetail}" alt="Image" />
      </div>
      <div class="title">
        <h2>Complaints 요청서</h2>
      </div>
    </div>
    <div class="body">
      <div class="table-wrap">
        <p>페이지수: 1/1</p>
        <!-- info table -->
        <table class="table-01"> 
          <tr>
            <th class="b-bottom b-left">고객명</th>
            <th class="b-bottom">문서번호</th>
            <th class="b-bottom">문서일자</th>
            <th class="b-bottom b-right">거래통화</th>
          </tr>
          <tr>
            <td class="b-top b-left b-bottom">{!ReturnPDF.customerAccName}</td>
            <td rowspan="2" class="b-top">{!returnPDF.returnOrderNo}</td>
            <td rowspan="2" class="b-top">{!returnPDF.OriginDocDate}</td>
            <td rowspan="2" class="b-top b-right">{!returnPDF.roCurrency}</td>
          </tr>
          <tr>
            <td class="b-top b-bottom b-left">{!ReturnPDF.customerAccCEO}</td>
          </tr>
          <tr>
            <td class="b-top b-left">
              <span>Your Customer code is </span>
              <span>{!ReturnPDF.customerCode}</span>
            </td>
            <th colspan="3" class="b-right">
              <span>고객참조번호</span>
              <span>{!returnPDF.customerOrderNo}</span>
            </th>
          </tr>
        </table>
        <!-- table2 -->
        <table class="table-02">
          <thead>
            <tr>
              <th class="b-bottom">순번</th>
              <th class="b-bottom">주문품번</th>
              <th class="b-bottom">품명</th>
              <th class="b-bottom">고객판매일</th>
              <th class="b-bottom"></th>
              <th class="b-bottom">수량</th>
              <th class="b-bottom">단위</th>
              <th class="b-bottom t-left">단가</th>
            </tr>
            <tr>
              <th class="b-top" rowspan="2"></th>
              <th class="b-top" rowspan="2"></th>
              <th class="b-top b-bottom">컴플레인트 코드</th>
              <th class="b-top b-bottom">수락코드</th>
              <th class="b-top b-bottom">참조문서번호</th>
              <th class="b-top b-bottom" colspan="2">참조문서품</th>
              <th class="b-top b-bottom t-left">금액</th>
            </tr>
            <tr>
              <th class="b-top">컴플레인트 사유</th>
              <th class="b-top" colspan="2">컴플레인트 노트</th>
              <th class="b-top"></th>
              <th class="b-top"></th>
              <th class="b-top"></th>
            </tr>
          </thead>
          <tbody>
            <!-- <aura:iteration items="{!v.poi}" var="items" indexVar="index"> -->

            <apex:repeat value="{!returnPDF.roiList}" var="item"> 
              <tr>
                <td class="b-bottom">{!item.sequenceNumber}</td>
                <td class="b-bottom">{!item.orderPartNo}</td>
                <td class="b-bottom">{!item.partName}</td>
                <td class="b-bottom">{!item.salesDate}</td>
                <td class="b-bottom"></td>
                <td class="b-bottom">{!item.returnQuantity}</td>
                <td class="b-bottom">{!item.unit}</td>
                <td class="b-bottom t-left">{!item.unitPrice}</td>
              </tr>
              <tr>
                <td class="b-top" rowspan="2"></td>
                <td class="b-top" rowspan="2"></td>
                <td class="b-top b-bottom">{!item.cpReasonOne}</td>
                <td class="b-top b-bottom"></td>
                <td class="b-top b-bottom"></td>
                <td class="b-top b-bottom" colspan="2"></td>
                <!-- <td class="b-top b-bottom t-left">{!item.totalAmount}</td> -->
                <td class="b-top b-bottom t-left">{!item.totalA}</td>
              </tr>
              <tr>
                <td class="b-top">{!item.cpReasonTwo}</td>
                <td class="b-top" colspan="2">{!item.cpNote}</td>
                <td class="b-top"></td>
                <td class="b-top"></td>
                <td class="b-top"></td>
              </tr>                
            </apex:repeat>
          </tbody>
          <tfoot>
            <tr>
              <td class="b-bottom t-right" colspan="4">부품 소계 (수량/금액)</td>
              <td class="b-bottom"></td>
              <td class="b-bottom t-left" colspan="2">{!ReturnPDF.allQuantity}</td>
              <!-- <td class="b-bottom t-left">{!ReturnPDF.allAmount}</td> -->
              <td class="b-bottom t-left">{!ReturnPDF.amount}</td>
            </tr>
            <tr>
              <td class="b-top b-bottom t-right" colspan="4">합계</td>
              <td class="b-top b-bottom"></td>
              <td class="b-top b-bottom t-left" colspan="2">{!ReturnPDF.allQuantity}</td>
              <!-- <td class="b-top b-bottom t-left">{!ReturnPDF.allAmount}</td> -->
              <td class="b-top b-bottom t-left">{!ReturnPDF.amount}</td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
    

  </body>

</apex:page>