<apex:page showHeader="false" standardStylesheets="false" sidebar="false" renderAs="pdf" applyHtmlTag="false" 
controller="DN_priceDetailViewPDFController"
contentType="text/html;charset=UTF-8">

  <head>
    <meta charset="UTF-8" />
    <link href="https://fonts.googleapis.com/css?family=Nanum+Gothic" rel="stylesheet" />
    <style type="text / css">
      @page {
				padding: 0;
				margin: 16px; 
				@bottom-center {
					content: counter(page);
					font-family: Arial Unicode MS, Helvetica, sans-serif;
				} 
			}
				body,html { } 
			.page-break {
				page-break-after:always;
			}
			body {
				font-family: Arial Unicode MS, Helvetica, sans-serif;
				font-weight: 400;
				font-size: 12px;
				line-height: normal;
			}
      table { 
        width: 100%; 
        border: 1px solid #444444; 
        border-collapse: collapse; 
        border-spacing: 0;
      }
      th, td { 
        border: 1px solid #444444; 
        border-collapse: collapse; 
        padding: 0;
      }
			h1,h2,h3,h4,h5,h6,a,p,span,b,strong{}

      /* Begin Custom Grid System */
      .clearfix {
        clear: both;
      }
      .row {
          display: block;
      }
      .col {
          float: left;
      }
      .size-1-of-2 {
          width: 48%;
      }
      .size-1-of-3 {
          width: 33.33%;
      }
      .size-1-of-4 {
          width: 25%;
      }
      .size-1-of-5 {
          width: 20%;
      } 
      /* End Custom Grid System */

      /* Style CSS */
      .header h2 {
        text-align: center;
        font-size: 18px;
      }

      .body .info-table {
        padding: 25px 25px 50px;
      }

      .body .info-table table {
        border: none;
      }

      .body .info-table table th {
        border: none;
        text-align: right;
      }

      .body .info-table table td {
        border: none;
        text-align: left;
      }


      .body .records-table table {
        text-align: center;
      }

      .body .records-table table th {
        background: #ced4da; 
      }

    </style>
  </head>

  <body>
    <div class="wrapper">
      <div class="header">
        <h2>판매가 상세조회</h2>
      </div>
      <div class="body">
        <div class="info-table table-wrap">
          <table>
            <colgroup>
              <col width="15%" />
              <col width="17%" />
              <col width="15%" />
              <col width="17%" />
              <col width="15%" />
              <col width="17%" />
            </colgroup>
            <tr>
              <th>PO Inquiry No. : </th>
              <td>{!detailInfo.peNo}</td>
              <th>Inquiry PO No : </th>
              <td>{!detailInfo.poNo}</td>
              <th></th>
              <td></td>
            </tr>
            <tr>
              <th>부품대리점 : </th>
              <td>{!detailInfo.partDealer}</td>
              <th>요청인 : </th>
              <td>{!detailInfo.requester}</td>
              <th>요청인 Email : </th>
              <td>{!detailInfo.requesterEmail}</td>
            </tr>
            <tr>
              <th>기종 : </th>
              <td>{!detailInfo.equipmentName}</td>
              <th>장비번호 : </th>
              <td> {!detailInfo.equipmentNo}</td>
              <th>생성일 : </th>
              <td>{!detailInfo.creationDate}</td>
            </tr>
            <tr>
              <th>상태 : </th>
              <td>{!detailInfo.status}</td>
              <th></th>
              <td></td>
              <th></th>
              <td></td>
            </tr>
          </table>
        </div>
        <div class="records-table table-wrap">
          <p>관련 서류 첨부 : <span>
            <apex:repeat value="{!detailInfo.attachFile}" var="item">
              {!item.fileName}
              </apex:repeat>  
          </span></p>
          <p>Remark : <span>{!detailInfo.remark}</span></p>
          <p>거절사유 : <span>{!detailInfo.rjReason}</span></p>
          <table>
            <tr>
              <th>No</th>
              <th>품번</th>
              <th>품명</th>
              <th>통화</th>
              <th>시스템가격</th>
              <th>제안가격</th>
              <th>신규가격</th>
              <th>요청사항</th>
            </tr>
            <apex:variable var="index" value="{!0}" /> 
            <apex:repeat value="{!detailInfo.statusRecord}" var="item">
              <tr>
                <td>{!index+1}</td>
                <td>{!item.partNo}</td>
                <td>{!item.partName}</td>
                <td>{!item.curr}</td>
                <td>{!item.systemPrice}</td>
                <td>{!item.suggestPrice}</td>
                <td>{!item.newPrice}</td>
                <td>{!item.request}</td>
              </tr>
              <apex:variable var="index" value="{!index + 1}" /> 
            </apex:repeat>
          </table>
        </div>
      </div>
    </div>
  </body>
</apex:page>